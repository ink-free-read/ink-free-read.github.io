{{#projects}}
<div class="p-8 bg-silver_lake_blue-900 border border-neutral-200 rounded-xl hover:shadow-lg transition {{#isDetailed}}flex flex-col{{/isDetailed}}">
      {{#logo}}
    <div class="mb-4 h-8">
      <a href="{{link}}" target="_blank">
        <img src="{{src}}" alt="{{alt}}" class="h-full w-auto object-contain" />
      </a>
    </div>
    {{/logo}}
  
  <h4 class="text-xl font-semibold mb-2 hover:text-giants_orange transition"><a href="{{link}}" target="_blank">{{title}}</a></h4>
  
  
      {{#stats}}
    <div class="mb-4">
      <div class="flex flex-col gap-2">
        {{#each items}}
        <div class="flex flex-wrap gap-2">
          {{#each items}}
          <div class="relative group">
            <div class="rounded border text-center {{#if (eq ../type 'primary')}} px-20 py-2 bg-giants_orange text-white shadow-md {{else}} px-2 py-1.5 bg-neutral-100 text-neutral-900 {{/if}}">
              <div class="{{#if (eq ../type 'primary')}} text-2xl font-extrabold leading-tight {{else}} text-lg font-bold leading-none {{/if}}">{{value}}</div>
              <div class="{{#if (eq ../type 'primary')}} text-white/80 text-lg -mt-1 {{else}} text-xs text-neutral-600 mt-0 {{/if}}">{{label}}</div>
            </div>
            <div class="absolute bottom-full left-1/2 transform -translate-x-1/2 mb-2 px-2 py-1 bg-gray-900 text-white text-xs rounded opacity-0 group-hover:opacity-100 transition-opacity duration-200 pointer-events-none whitespace-nowrap z-10">
              {{#if detail}}{{detail}}{{else}}{{label}}: {{value}}{{/if}}
            </div>
          </div>
          {{/each}}
        </div>
        {{/each}}
      </div>
    </div>
    {{/stats}}

  <p class="text-sm text-neutral-600 mb-4">{{description}}</p>

  <h5 class="font-semibold mb-3 text-neutral-900">Tech Stack:</h3>
  
  {{#if techStack}}
  <div class="mt-auto flex flex-col gap-2">
    {{#each techStack}}
    <div class="flex flex-wrap gap-3">
      {{#each items}}
      <span class="group relative {{#if (eq ../type 'primary')}} w-12 h-12 {{else}}{{#if (eq ../type 'secondary')}} w-9 h-9 {{else}} w-6 h-6 {{/if}}{{/if}} flex-shrink-0">
        {{> basic-icon url=this.url img_path=this.img_path name=this.name }}
        <div class="absolute bottom-full left-1/2 transform -translate-x-1/2 mb-2 px-2 py-1 bg-gray-900 text-white text-xs rounded opacity-0 group-hover:opacity-100 transition-opacity duration-200 pointer-events-none whitespace-nowrap z-10">{{this.name}}</div>
      </span>
      {{/each}}
    </div>
    {{/each}}
  </div>
  {{/if}}
  
  {{#client}}
  <span class="text-xs bg-silver_lake_blue-100 text-silver_lake_blue px-3 py-1 rounded-full">Client: {{name}}</span>
  {{/client}}
</div>
{{/projects}}
